extends base
block content
  .container
    .col-sm-6.col-sm-offset-3.welcome= welcome_text
    .col-sm-6.login-form.col-sm-offset-3
      form.form-horizontal(method="post")
        .form-group
          label.col-sm-2.control-label 用户名
          .col-sm-8
            input.form-control(type="text" name="username" placeholder="用户名")
        .form-group
          label.col-sm-2.control-label 密码
          .col-sm-8
            input.form-control(type="password" name="password" placeholder="密码")
        .form-group
          .col-sm-10.col-sm-offset-2
            button.btn.btn-default(type="submit") 登陆
